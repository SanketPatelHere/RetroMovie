<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardMaxElevation="5dp"
    app:cardBackgroundColor="#ddbb44"
    android:background="#eedd99"
    android:layout_margin="5dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="My Title"
            android:singleLine="true"
            android:textSize="25sp"
            android:textStyle="bold"
            android:background="#ccddcc"/>

        <ImageView
            android:id="@+id/imgv"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="#526526"
            android:src="@drawable/ic_launcher_foreground"
            />
        <TextView
            android:id="@+id/tvId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Id : 1000"
            android:textSize="20sp"
            android:background="#ddbbaa"/>

        <TextView
            android:id="@+id/tvDesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Desc : 1874 = voting"
            android:singleLine="true"
            android:textSize="20sp"
            android:background="#ddbbaa"/>

        <TextView
            android:id="@+id/tvReleaseDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Release Date : 2019-09-17"
            android:textSize="20sp"
            android:background="#ddbbaa"/>

    </LinearLayout>



</androidx.cardview.widget.CardView>